
@{
    ViewData["Title"] = "Login Page";
}

<div class="container">
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <form method="post">
                <div class="form-group mt-3">
                    <label>Kullanıcı Adı</label>
                    <input type="text" class="form-control" />
                </div>
                <div class="form-group mt-3">
                    <label>Şifre</label>
                    <input type="password" class="form-control" />
                </div>
                <div class="form-group mt-3">
                    <button class="btn btn-info">Giriş Yap</button>
                </div>
            </form>
        </div>
    </div>
</div>